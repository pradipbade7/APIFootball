@{
    ViewData["Title"] = "Home Page";
}
@model APIFootball.Models.HomeModel
<style>

</style>
<div class="row">
    <section class="col-lg-12">
        <div class="row section title-divider" style="padding-bottom:0">
            <div class=" col-md-12">
                <div class="row title">
                    <div class="col-md-6">
                        <h3>News</h3>
                    </div>
                </div>
            </div>

            <div class="row section">
                @for (var i = 0; i < 4; i++)
                {
                    <div class="col-md-3 col-sm-6 col-12  news">
                        <a href="@Model?.News.articles[i].url" target="_blank">
                            @if (!string.IsNullOrEmpty(@Model?.News.articles[i].urlToImage))
                            {
                                <img src="@Model?.News.articles[i].urlToImage" class="transition newsimg" width="100%" alt="">
                            }
                            else
                            {
                                <img src="~/img/breakingnews.jpg" class="transition newsimg" width="100%" alt="">
                            }

                            <div class="description position-relative bg-white">
                                <h6 class="heading">@Model?.News.articles[i].title</h6>
                            </div>
                        </a>
                    </div>
                }
                <div class="col-12">
                    <a href="/News">
                        <div class="description position-relative bg-white">
                            <h6 style="text-align:center;" class="heading">See All News..</h6>
                        </div>
                    </a>
                </div>

            </div>

        </div>
    </section>
</div>
<div class="row">
    <section class="col-md-12">
        <div class="row section title-divider" style="padding-top:0">
            <div class=" col-md-12">
                <div class="row title">
                    <div class="col-md-6">
                        <h3>Competitions</h3>
                    </div>
                </div>
            </div>

            @foreach (var item in Model.Competition)
            {
                <div class="col-md-4 col-lg-3 col-6 club">
                    <a href="/Competition/@item.id" class="red-club">
                        <div class="card">
                            @*<img src="@item?.emblemUrl" class="card-img-top d-none d-sm-block" alt="">*@
                            <img src="@item?.emblemUrl" class="clubs_logo rounded-circle" alt="">
                            <div class="card-body">
                                <h6 class="text-center text-white name-title">@item?.name</h6>
                                <div class="btn btn-block btn-danger text-white">See Details</div>
                            </div>
                        </div>
                    </a>
                </div>
            }

            <div class="col-12" style="margin:30px 10px">
                <a href="/Fixtures">
                    <div class="description position-relative bg-white">
                        <h5 style="text-align:center;" class="heading">All Competitions..</h5>
                    </div>
                </a>
            </div>
        </div>
    </section>
</div>
